procedure TFrmCategoria.Button1Click(Sender: TObject);
  var
    i: integer;
    retornoString: string;
    retornoVetor: TStringDynArray;
    baseURL: string;
    jsonArray: TJSONArray;

    //jsonObject: TJSONObject;
    //dados: TJSONObject;
    //responseJsonApi: TCustomRESTResponse;

begin
  if(ComboBox1.ItemIndex = -1) then
    begin
      MessageDlg('Selecione uma categoria ou feche a janela.', mtInformation, [mbOK], 0);
    end
  else
    begin
      //FrmPrincipal.ListBox1.Items.Add(ComboBox1.Items[ComboBox1.ItemIndex]);
      FrmPrincipal.ListBox1.Clear;

      baseURL := 'https://service.tecnomotor.com.br/iRasther/montadora?pm.platform=1&pm.version=23&pm.type=';
      RESTClient1.BaseURL := baseURL + ComboBox1.Items[ComboBox1.ItemIndex];
      RESTRequest1.Execute;
      FrmPrincipal.Memo1.Lines.Add(RESTResponse1.JSONText); //Até aqui funciona

      FrmPrincipal.Memo1.Lines.Add('NOVOS CÓDIDOS:');

      jsonArray := TJSONObject.ParseJSONValue(RESTResponse1.Content) as TJSONArray;
      FrmPrincipal.Memo1.Lines.Add(jsonArray.Items[0].ToJSON);


//      dados := RESTResponse1.JSONValue as TJSONObject;


      //Solução stackoverflow
      //jsonObject := RESTResponse1.JSONValue as TJSONObject;
      //dados := jsonObject.Values[''] as TJSONObject;
      //FrmPrincipal.Memo1.Lines.Add(jsonObject.JSON);


      //jsonObject := RESTResponse1.JSONValue as TJSONObject;

      //FrmPrincipal.Memo1.Lines.Add(jsonObject.GetValue('id').Value);

      //responseJsonApi := RESTRequest1.Response;
      //retornoAPI := RESTResponse1.Content;
      //jsonObject := TJsonObject.ParseJSONValue(RESTResponse1.Content) as TJsonObject; //Linha da DEVMedia

      //FrmPrincipal.Memo1.Lines.Add(responseJsonApi.JSONText);
      //FrmPrincipal.Memo1.Lines.Add(responseJsonApi.);

      FrmCategoria.Close;
    end;
end;

procedure TFrmCategoria.FormShow(Sender: TObject);
  var
    i: integer;
    retornoString: string;
    retornoVetor: TStringDynArray;

begin
  ComboBox1.Clear;
  RESTRequest1.Execute;
  //Optei por manipular strings pois infelizmente não conheço um método
  //em Delphi para popular a ComboBox de forma direta em forma de objeto
  //com o array de retorno da API. Aqui eu não soube trabalhar
  //com um array de string simples.
  retornoString := RESTRequest1.Response.Content;
  retornoString := retornoString.Substring(1,length(retornoString)-2);
  retornoVetor := SplitString(retornoString, ',');
  for i := 0 to length(retornoVetor)-1 do
    ComboBox1.Items.Add(retornoVetor[i].Substring(1,length(retornoVetor[i])-2));
end;

end.
